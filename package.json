{
    "name": "sewcar-serial",
    "version": "0.0.1",
    "description": "Serial Connector to test SewCAr Mega board",
    "main": "build/main.js",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "node build/main.js",
        "start-dev": "cd src && ts-node main.ts --inspect=0.0.0.0:9229",
        "start-watch": "nodemon -L src/main.ts --inspect=0.0.0.0:9229 --exec ts-node",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.+(js|jsx|ts|tsx|json)\"",
        "test": "jest --watchAll",
        "test:coverage": "jest --watchAll --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test-ci": "jest --collect-coverage",
        "publish-code-coverage": "codecov",
        "validate": "npm run lint"
    },
    "author": "juanjofp",
    "license": "MIT",
    "devDependencies": {
        "@types/convict": "^5.2.1",
        "@types/jest": "^26.0.19",
        "@types/node": "^14.14.20",
        "@types/serialport": "^8.0.1",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "eslint": "^7.17.0",
        "eslint-plugin-filenames": "^1.3.2",
        "husky": "^4.3.6",
        "jest": "^26.6.3",
        "jest-watch-typeahead": "^0.6.1",
        "nodemon": "^2.0.6",
        "prettier": "^2.2.1",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "iohook": "^0.7.2",
        "serialport": "^9.0.4",
        "sew-parser": "0.0.2"
    }
}
