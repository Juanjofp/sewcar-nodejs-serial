{
  "include": ["./src/**/*.ts", "./__tests__/**/*.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "noImplicitAny": false,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "watch": false,
    "lib": ["es2018", "dom"], // En proyectos backend con node eliminar la referencia a dom, a menos que queiras usar RxJs
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
  }
}
